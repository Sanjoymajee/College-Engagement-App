<%- include("./partials/header") %>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/create-post.css">
    <title>Create Blogs</title>
</head>

<body>
    <%- include("./partials/navbar") %>
    <div class="column">
        <div class="create-blog">
        </div>

        <div class="create-blog content">
            <form class="row g-3" action="/create-post" method="POST">
                <label for="title">Blog Title</label>
                <input type="text" class="form-control" name="title" id="title" required>
                <label for="type">Blog Type</label>
                <input type="text" class="form-control" name="type" id="type" required>
                <label for="content ">Blog Body</label>
                <textarea class="form-control" name="content" id="content" cols="30" rows="10" id="content" required></textarea>
                <button class="btn btn-primary">Submit</button>
            </form>
        </div>

        <div class="create-blog">
        </div>
    </div>
    <%- include('partials/footer') %>
</body>
</html>